<div class="inner-wrapper">
	<a id="search"></a> 
	<section class="search">
		
		<%= form_tag(root_path, :method => "get") do %>
			<fieldset class="search-field">
				<%= text_field_tag :search, params[:search], placeholder: "search" %>
				<%= submit_tag "search events", :name => nil, :class => 'button' %>
			</fieldset>
		<% end %>

		<%= form_tag(root_path, :method => "get") do %>
			<fieldset class="filters">
				<ul>
					<li>
						<%= check_box_tag(:categorySearch1, "art") %> <%= label_tag(:category, "Art") %>
					</li>
					<li>
						<%= check_box_tag(:categorySearch2, "performance") %> <%= label_tag(:category, "Performance") %>
					</li>
					<li>
						<%= check_box_tag(:categorySearch3, "science") %> <%= label_tag(:category, "Science/Tech") %>
					</li>
					<li>
						<%= submit_tag "search by category", :name => nil, :class => 'button' %>
					</li>
				</ul>
				<div class="clear-fix"></div>
			</fieldset>
		<% end %>

		<div class="clear-fix"></div>

		<%= form_tag(root_path, :method => "get") do %>
			<fieldset class="date-search">
				<%= text_field_tag :startDateSearch, params[:startDateSearch], placeholder: "start date", id: "from", autocomplete:"off" %>
				<%= text_field_tag :endDateSearch, params[:endDateSearch], placeholder: "end date", id: "to", autocomplete:"off" %>
				<%= submit_tag "search by date", :name => nil, :class => 'button' %> 
			</fieldset>           
		<% end %>

		<!--  <%= form_tag(root_path, :method => "get") do %>
		<fieldset class="date-search">
		<%= text_field_tag :startTimeSearch, params[:startTimeSearch], placeholder: "start time", id: "datetimepicker" %>
		<%= text_field_tag :endTimeSearch, params[:endTimeSearch], placeholder: "end time", id: "to" %>
		<%= submit_tag "search by time", :name => nil, :class => 'button' %> 
		</fieldset>           
		<% end %>
		-->

		<div class="clear-fix"></div>

	</section><!--.search-->

	<!-- </script> -->

	<script src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>

	<section class="map-view">
		<h2>Map of Events</h2>
		
		<!-- MAP container -->
		<div id="map">
		</div>
	</section>
	
	<a id="listings"></a> 
	<section class="listings">
		<h2>Events</h2>
		<table>
			<thead>
				<tr>
					<th>event</th>
					<th>location</th>
					<th>date</th>
					<th>time</th>
					<th>category</th>
					<th>subcategories</th>
					<!-- <th colspan="3"></th> -->
				</tr>
			</thead>
			<tbody>
				<% @events.each do |i| %>
					<tr>
						<td class="title" ><%= link_to @events.find_by_id(i).name, i%></td>
						<td><%= Venue.find_by_id(@events.find_by_id(i).venue_id).name %>, 
						<%= Venue.find_by_id(@events.find_by_id(i).venue_id).street%>,
						<%= Venue.find_by_id(@events.find_by_id(i).venue_id).city%></td>
						<td><%= link_to @events.find_by_id(i).start_date, i%></td>
						<td><%= link_to @events.find_by_id(i).start_time, i%></td>
						<td><%= link_to @events.find_by_id(i).category, i%></td>
						<td><%= link_to @events.find_by_id(i).subcategory, i%></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</section>

	<!-- google map api -->
	<%= javascript_tag do %>
		
		//get info from venues and events
		window.venuesURL = "<%=j venues_url %>";
		window.eventsURL = "<%=j events_url %>";
		//get get the array of venues for the loaded events
		window.events = <%=raw @eventVenuesArr.to_json %>;

		var styleArray = [
			{
				featureType: "all",
				stylers: [
				{ saturation: -50 }
				]
			},
			{
				featureType: "road.arterial",
				elementType: "geometry",
				stylers: [
					{ hue: "#00ffee" },
					{ saturation: 50 }
				]
			},
			{
				featureType: "poi.business",
				elementType: "labels",
				stylers: [
					{ visibility: "off" }
				]
			}
		];

		var map = new google.maps.Map(document.getElementById('map'), {
			zoom: 13,
			center: new google.maps.LatLng(37.7745140408613, -122.44537353515625),
			mapTypeId: google.maps.MapTypeId.ROADMAP,
			styles: styleArray,
		});

		var infowindow = new google.maps.InfoWindow();
		var marker, i;

		for (i = 0; i < events.length; i++) {  
			
			marker = new google.maps.Marker({
				position: new google.maps.LatLng(events[i][0], events[i][1]),
				map: map
			});

			google.maps.event.addListener(marker, 'click', (function(marker, i) {

				return function() {
				infowindow.setContent(
				"<span id='content'>" + "<p ><strong><a href=\"events/" + events[i][7] + "\">" + events[i][2] + "</a></strong></p>" + "<p>Location: " + events[i][3] + " " + events[i][4] + " "+ events[i][5] + "</p>" + "<p>Description: "+ events[i][6] + "</p>" +"</span>"
				);
				infowindow.open(map, marker);
				}
			})(marker, i));

		}
	<% end %>
</div>
